<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App Theme (Night) -->
    <style name="Theme.SOSConnect" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- Splash Theme (Force Light even in Dark Mode) -->
    <style name="Theme.SOSConnect.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Circular Image View Style -->
    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- dark grey for night mode -->
    <color name="card_bg">#1E1E1E</color>

</resources>
